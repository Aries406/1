@model ShopWeb.Models.RegisteredModel
@{
    ViewBag.Title = "Registered";
}
@Scripts.Render("~/bundles/js")
@Styles.Render("~/Content/css")

@using (Html.BeginForm("Registered", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container mt-5 mb-5">

        <h2>註冊帳號</h2>

        <div class="form-group">
            <label>帳號</label>
            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { placeholder = "Enter your account", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>密碼</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Enter your password", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <label>確認密碼</label>
            @Html.EditorFor(model => model.Password2, new { htmlAttributes = new { placeholder = "Confirm your password", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Password2, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>信箱</label>

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Enter your Email", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.SuccessMessage, "", new { @class = "badge badge-success" })
        </div>
        <input type="submit" value="確認" class="btn btn-primary" />
        <input type="reset" value="清除" class="btn btn-warning" />

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
