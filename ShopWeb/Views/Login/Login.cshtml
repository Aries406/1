@model ShopWeb.Models.LoginModel
@{
    ViewBag.Title = "登入";
}
@Scripts.Render("~/bundles/js")
@Styles.Render("~/Content/css")
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container mt-5 mb-5">
        <h2>登入</h2>

        <div class="form-group">
            <label>帳號</label>
            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { placeholder = "Enter your Account", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>密碼</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Enter your Password", @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })
        </div>
        <input type="submit" value="確認" class="btn btn-primary" />
        <input type="reset" value="清除" class="btn btn-warning" />
        <div>@Html.ActionLink("還沒有帳號?", "Registered", "Login", new { @class = "text-primary" })</div>
    </div>

}

