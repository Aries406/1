@model ShopWeb.Models.Item

<script src="~/Scripts/js/slick-custom.js"></script>


<!-- breadcrumb -->
<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
    <a>@Html.ActionLink("首頁", "Index", "Home", new { @class = "s-text16" })</a>
    <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>

    <a>@Html.ActionLink("地區", "Product", "Product", new { @class = "s-text16" })</a>

    <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>

    @Html.DisplayFor(model => model.ZoneName)
    <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>

    <span class="s-text17">

    </span>
</div>

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="slick3">
                    <div class="item-slick3" data-thumb="images/item-13.jpg">
                        <div class="wrap-pic-w">
                            <img src="@Url.Content(Model.ImagePath)" alt="Image" />
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="images/boracay-01.jpg">
                        <div class="wrap-pic-w">
                            <img src="images/boracay-02.jpg" alt="IMG-PRODUCT">
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="images/boracay-02.jpg">
                        <div class="wrap-pic-w">
                            <img src="images/boracay-03.jpg" alt="IMG-PRODUCT">
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="images/boracay-03.jpg">
                        <div class="wrap-pic-w">
                            <img src="images/boracay-03.jpg" alt="IMG-PRODUCT">
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="w-size14 p-t-30 respon5">
            <h4 class="travel-detail-name m-text16 p-b-13">
                @Html.DisplayFor(model => model.ItemName)
            </h4>

            <span class="block2_price m-text17">
                $@Html.DisplayFor(model => model.ItemPrice)
            </span>

            <p class="s-text8 p-t-10">
                @Html.DisplayFor(model => model.Description)
            </p>


            <div class="flex-r-m flex-w p-t-10">
                <div class="s-text15 w-size15 t-center">
                    數量
                </div>

                <div class="w-size16 flex-m flex-w">
                    <div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
                        <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                            <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                        </button>

                        <input class="size8 m-text18 t-center num-product" type="number" name="num-product" value="1">

                        <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                            <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                        </button>
                    </div>

                    <div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
                        <!-- Button -->
                        <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                            加入購物車
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

